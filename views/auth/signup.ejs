<%- include("../includes/head.ejs") %>
    <!-- Position relative to Public folder -->
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include("../includes/navigation.ejs") %>
            <form class="login-form" action="/signup" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <% if( errorMessage ) { %>
                <div class="user-message user-message--error">
                    <%=errorMessage%>
                </div>
                <% } %>  
                <% if(errorMessage && errorMessage.length > 1) { %>
                <div class="user-message user-message--error"> <%=errorMessage%></div>  
                <% } %> 
                <div class="form-control">
                    <label for="email">E-mail</label>
                    <input 
                    class="<%= validationErrors.find(e => e.path === 'email' ) ? 'invalid' : '' %>" 
                    type="email" name="email" id="email" value="<%= oldInput.email %>"
                    >
                </div>
                <div class="form-control">
                    <label for="password">Password</label>
                    <input class="<%= validationErrors.find(e => e.path === 'password' ) ? 'invalid' : '' %>" type="password" name="password" id="password" value="<%= oldInput.password %>">
                </div>
                <div class="form-control">
                    <label for="password">Confirm Password</label>
                    <input class="<%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>" type="password" name="confirmPassword" id="confirmPassword"
                        value="<%= oldInput.confirmPassword %>">
                </div>
                <button class="btn" type="submit">Signup</button>
            </form>
    </body>
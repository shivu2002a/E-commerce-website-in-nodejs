<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <h1 style="color: blueviolet; padding: 0 0 0 35%;">WELCOME TO THE CART</h1>
            <main>
                <% if (products.length > 0) { %>
                    <div class="grid">
                        <% for (let prod of products ){ %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= prod.productData.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= prod.productData.imageUrl %>" alt="<%= prod.productData.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$<%= prod.productData.price%> </h2>
                                    <p class="product__description">
                                        Quantity: <%= prod.qty%>
                                    </p>
                                    <p class="product__description">
                                        <%= prod.productData.description %>
                                    </p>
                                    <form action="/delete-cart-item" method="post">
                                        <input type="hidden" name="productId" value="<%=prod.productData.id%>">
                                        <button type="submit" class="btn">Delete</button>
                                    </form>
                                </div>

                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No products in cart </h1>
                        <% } %>
            </main>
    </body>

    </html>